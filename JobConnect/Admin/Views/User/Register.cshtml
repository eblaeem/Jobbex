@{
    Layout = null;
}
@model ViewModel.User.CreateUserAdmin
<!DOCTYPE html>
<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <meta name="robots" content="" />
    <meta name="description" content="" />
    <link rel="icon" href="images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.png" />

    <title>آگهی استخدام/بازاریابی</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link href="~/css/notyf.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />

    <script src="\js\jquery-3.6.0.min.js"></script>
    <script src="\js\popper.min.js"></script>
    <script src="\js\bootstrap.min.js"></script>
    <script src="~/js/jquery.blockUI.js"></script>
    <script src="~/js/system.js"></script>
    <script src="~/js/notyf.min.js"></script>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="login-wrap ">
                            <div class="card box-shadow-lg p-3">
                                <div class="card-body">
                                    <form id="register-form">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group has-error">
                                                    <label>نام </label>
                                                    <input type="text" class="form-control" asp-for="FirstName">
                                                </div>
                                                <div class="form-group has-error">
                                                    <label>نام خانوادگی </label>
                                                    <input type="text" class="form-control" asp-for="LastName">
                                                </div>
                                                <div class="form-group has-success">
                                                    <label>نام کاربری</label>
                                                    <input type="email" class="form-control" asp-for="UserName">
                                                </div>

                                                <div class="form-group has-success">
                                                    <label>ایمیل</label>
                                                    <input type="email" class="form-control" asp-for="Email">
                                                </div>

                                                <div class="form-group has-error">
                                                    <label>شماره موبایل </label>
                                                    <input type="text" class="form-control" asp-for="PhoneNumber">
                                                </div>

                                                <div class="form-group has-success">
                                                    <label>انتخاب رمز عبور</label>
                                                    <input type="password" class="form-control" asp-for="Password" />
                                                </div>

                                                <div class="form-group has-error">
                                                    <label>تکرار رمز عبور</label>
                                                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                                                </div>

                                            </div>
                                            <div class="col-sm-12">
                                                <a id="submit" class="btn btn-primary  mt-5 ">
                                                    <i class="fa fa-sign-in-alt"></i>
                                                    ثبت نام
                                                </a>

                                                <a href="/user/login" style="float:left" class="btn btn-outline-success  mt-5">
                                                    <i class="fa fa-sign-in-alt"></i>
                                                    ورود
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="img" style="background-image: url(/images/background/pattern2.jpg); ">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type="systemjs-module" src="/dist/register.js"></script>
</body>
</html>



